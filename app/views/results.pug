extends layout

block content
  .main_wrapper
    h1.main_header= title
    if data.length
      table.result_table
        tr
          th
          th Дата
          th Тип операции
          th Автор
          th Задачи
          th Проект
          th Номер сборки
          th

        each val, index in data
          tr
            td
            td= val.date
            td= val.type
            td= val.author
            td
              each task, index in val.tasks.split(',')
               a(href='//pm.handh.ru/issues/' + task target='_blank')= task
               | &nbsp;
            td= val.project
            td= val.buildNumber
            td
    else
      .empty_result Результатов еще нет
